<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "logo_brand" do %>
    <%= image_tag "Logo" %>
    <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mx-auto">
      <li class="nav-item dropdown">
          <%= link_to "Categories", "#" , class: "dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% @types.each do |type| %>
            <%= link_to type.name, "#", class: "dropdown-item" %>
            <% end %>
          </div>
      </li>
    </ul>
  </div>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= link_to current_user.email, "#" , class: "dropdown-toggle small_size", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<% if notice %>
  <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>

<h1><%= @image %></h1>
<div class="mainbanners">
  <div class="app__cms__full-banner app__cms--skip-margin">
    <a data-label="separadasmasjuntas - image" data-slice="FullBanner" data-url="" href=""><img src="https://amarotech-res.cloudinary.com/image/fetch/c_limit,f_auto,dpr_2,w_1280,q_auto:best/v1/https://images.prismic.io/amaro/990e9327-6d92-4072-88aa-850bcf392ec2_20200409-AMARO-homepage-mini-banner-separadasmasjuntas-sem-free-shipping.jpg?auto=compress,format&amp;rect=0,0,2560,199&amp;w=2560&amp;h=199"></a>
    <img class="card-trip" src="https://images.unsplash.com/photo-1504326787394-e6d75cae8027?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" alt="">
  </div>
</div>
<div class="d-flex justify-content ajuste-title">
  <h1>All Products</h1>
 </div>
  <div class="row">
      <% @products.each do |product| %>
        <div class="col-3">
          <div class="flexpower">
            <%= link_to product_path(product) do %>
              <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://source.unsplash.com/random?sig=<%= product.id %>" alt="Card image cap">
                  <div class="card-body">
                    <h4 class="card-title text-align"><%= product.name %></h4>
                    <div class="app_product-box_pricing">
                      <div class="app_product-box_cost app_product-box_cost--promote">
                        <span>R$<%= product.price %></span>
                        <span>6x R$<%= product.price/6 %></span>
                      </div>
                      <div class="app__product-box__sale">
                        <span>R$ <%= (product.price*1.10).round(2) %>0</span>
                        <span>(58% off)</span>
                      </div>
                      <%= link_to 'comprar', product_path(product), class: 'btn btn-outline-secondary btn-lg btn-block' %>
                      </div>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
