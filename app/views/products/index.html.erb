<h1><%= @image %></h1>
<div class="mainbanners">
  <%= link_to 'Adicionar', new_product_path, class: 'btn btn-primary' %>
  <%= render 'products/carousel' %>
  </div>
</div>
<div class="d-flex justify-content ajuste-title">
  <h1>All Products</h1>
 </div>
  <div class="row">
      <% @products.each do |product| %>
        <div class="col-3">
          <div class="flexpower">
            <%= link_to product_path(product) do %>
              <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="https://source.unsplash.com/random?sig=<%= product.id %>" alt="Card image cap">
                  <div class="card-body">
                    <h4 class="card-title text-align"><%= product.name %></h4>
                    <div class="app_product-box_pricing">
                      <div class="app_product-box_cost app_product-box_cost--promote">
                        <span>R$<%= product.price %></span>
                        <span>6x R$<%= product.price/6 %></span>
                      </div>
                      <div class="app__product-box__sale">
                        <span>R$ <%= (product.price*1.10).round(2) %>0</span>
                        <span>(58% off)</span>
                      </div>
                      <%= link_to 'comprar', product_path(product), class: 'btn btn-outline-secondary btn-lg btn-block' %>
                      </div>
                  </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
  </div>
