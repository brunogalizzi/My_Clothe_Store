<div class="col-4 mx-auto" style="font-size: 18px">
   <!-- Form para add produto -->
   <%= simple_form_for(@product) do |f| %>
   <% @pe = f.association :type %>
      <%= f.input :name %>
    <div class="d-flex justify-content-between">
      <div class="col-9 mx-0">
      <%= @pe %>
      </div>
      <%= f.input :size, collection: ["S", "M", "L"], class: "text-right" %>
      <div>
         <br>
      </div>
   </div>
   <div class="d-flex justify-content-between">
      <%= f.input :stock %>
      <div class="billie-jean">
      <%= f.input :color, collection: ["red", "blue", "yellow", "green"] %>
      </div>
         <br>
   </div>
   <%= f.input :price %>
   <%= f.input :photos, as: :file, input_html: { multiple: true } %>
   <div class="btn btn-primary form-actions">
      <%= f.button :submit %>
   </div>
   <% end %>
</div>

